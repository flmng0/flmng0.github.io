{
  "compilerOptions": {
    "module": "commonJS",
    "target": "es6",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM",
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./*"],
    },
  },
  "typeAcquisition": {
    "exclude": ["mdast-util-from-markdown"],
  },
  "include": ["./src/**/*"]
}
